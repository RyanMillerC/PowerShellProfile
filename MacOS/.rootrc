# .bashrc

if [[ -z $TERM ]] ; then
    return 0 # Not a terminal - BAILOUT
fi

set -o vi 

# Environment Variables
export EDITOR='vim'
export LS_COLORS=${LS_COLORS}:'di=0;34:ex=0;32:fi=0;37:'
export VISUAL='vim'

# COLORS
RED="\[\e[0;31m\]"
GREEN="\[\e[0;32m\]"
YELLOW="\[\e[0;33m\]"
BLUE="\[\e[0;34m\]"
BOLD="\[\e[01;34m\]"
GRAY="\[\e[01;32m\]"
COLOROFF="\[\e[0;m\]"

# (Key) Bindings
bind '"\e[24~":"fg\n"' # Bind the fg command to F12

# Aliases
alias dir='ls -lah'  # Because I constantly type Powershell commands
alias ll='ls -lah'
alias lx='xterm > /dev/null 2>&1 &'

# Functions
cat() {
    [[ $# -eq 1 ]] && /bin/cat "$1"
    [[ $# -gt 1 ]] && for i in $@ ; do printf "\n==> ${i} <==\n" ; /bin/cat "$i" ; printf "\n" ; done
}
cleanhouse() {
    docker kill $(docker ps -q) 2> /dev/null
    docker rm $(docker ps -a -q) 2> /dev/null
}
ct() { date '+%Y%m%d%H%M%S' ; }
spoof_traffic() {
    sudo sysctl -w net.inet.ip.ttl=65
    printf "\e[0;31mGo forth and do good things...\e[0m\n"
}

PS1="${RED}\u@\h:\W ${BOLD}# ${COLOROFF}"

cd $(cat /Users/ryanmiller/.lastdir)  # cd to last dir my user was in

