{
  "title": "Fn+i to Shift-Control-T",
  "rules": [
    {
      "description": "Map Fn+i to Shift-Control-T",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": [
                "left_control",
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
